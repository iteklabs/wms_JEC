<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); -%>

</head>

<body>
    <!--*******************
    Preloader start
********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
    Preloader end
********************-->

    <!--**********************************
    Main wrapper start
***********************************-->
    <div id="main-wrapper">

        <!--**********************************
        Nav header start
    ***********************************-->
        <%- include('./partials/header_logo'); -%>

            <!--**********************************
        Nav header end
    ***********************************-->

            <!--**********************************
        Header start
    ***********************************-->
            <%- include('./partials/header',{titel: language.data_entry}); -%>

                <!--**********************************
        Header end ti-comment-alt
    ***********************************-->

                <!--**********************************
        Sidebar start
    ***********************************-->
                <%- include('./partials/sidebar'); -%>

                    <!--**********************************
        Sidebar end
    ***********************************-->

                    <div class="content-body">
                        <div class="container-fluid">
                            <!-- row -->
                            
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title col-6"><%= language.purchases_report %> </h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-responsive-sm text-center">
                                                <thead>
                                                    <tr>
                                                        <th><%= language.invoice %> </th>
                                                        <th><%= language.date %> </th>
                                                        <th><%= language.supplier %> </th>
                                                        <th><%= language.warehouse %> </th>
                                                        <th><%= language.total_amount %> </th>
                                                        <th><%= language.action %> </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% alldata.forEach((alldata)=> { %>


                                                        <% if(master_shop[0].currency_placement == 1) { %>

                                                            <tr>
                                                                <td>
                                                                    <%= alldata.invoice %>
                                                                </td>
                                                                
                                                                <td> 
                                                                    <%= alldata.date%>
                                                                </td>
                                                                
                                                                <td>
                                                                    <%= alldata.suppliers %>
                                                                </td>

                                                                <td> 
                                                                    <%= alldata.warehouse_name %>
                                                                </td>
                                                                
                                                                <td> 
                                                                    <%= alldata.payable.toLocaleString() %> <%= master_shop[0].currency %>
                                                                </td>
                                                                
                                                                <td> 
                                                                    <a href="/all_purchases/view/<%= alldata._id %>" class="btn btn-primary shadow sharp"><i class="flaticon-381-view"></i></a>
                                                                </td>
                                                            </tr>

                                                        <% } else { %>

                                                            <tr>
                                                                <td>
                                                                    <%= alldata.invoice %>
                                                                </td>
                                                                
                                                                <td> 
                                                                    <%= alldata.date%>
                                                                </td>
                                                                
                                                                <td>
                                                                    <%= alldata.suppliers %>
                                                                </td>
                                                                
                                                                <td> 
                                                                    <%= alldata.warehouse_name %>
                                                                </td>

                                                                <td> 
                                                                    <%= master_shop[0].currency %> <%= alldata.payable.toLocaleString() %>
                                                                </td>
                                                                
                                                                <td> 
                                                                    <a href="/all_purchases/view/<%= alldata._id %>" class="btn btn-primary shadow sharp"><i class="flaticon-381-view"></i></a>
                                                                </td>
                                                            </tr>

                                                        <% } %>

                                                    <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--**********************************
            Footer start
        ***********************************-->
                    <%- include('./partials/footer'); -%>

                        <!--**********************************
            Footer end
        ***********************************-->

    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!-- start Toastr -->
    <%- include('./partials/toastr'); -%>
    <!-- End Toastr -->

    <!--**********************************
        Scripts
    ***********************************-->
 
    <%- include('./partials/script'); -%>
        
        <!--**********************************
        Scripts end
    ***********************************-->
</body>

</html>