<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); -%>
</head>
<body>
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <div id="main-wrapper">
        <%- include('./partials/header_logo'); -%>
            <%- include('./partials/header',{titel: "Sales Order"}); -%>
                <%- include('./partials/sidebar_sa'); -%>
                    <div class="content-body">
                        <div class="container-fluid">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title col-6"></h4>
                                        <div class="card-title col-6 text-end">
                                            <a href="/sales_order/add_sales" class="btn btn-rounded btn-info text-white"> 
                                                Add 
                                                <span class="btn-icon-start text-info">
                                                    <i class="fa fa-plus color-info"></i>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-none">
                                            <input type="hidden" value="<%= master_shop[0].currency %>" id="hidden_currency">
                                            <input type="hidden" value="<%= master_shop[0].currency_placement %>" id="hidden_currency_placement">
                                        </div>
                                        <div class="table-responsive">
                                            <table id="example"
                                                class="table table-responsive-sm text-center">
                                                <thead>
                                                    <tr>
                                                        <th>Document Number </th>
                                                        <th><%= language.date %> </th>
                                                        <th><%= language.customer %> </th>
                                                        <th>Sales Order Number </th>
                                                        <th>Status </th>
                                                        <th>Quantity </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% sales_mine.map((data) => { %>
                                                        <tr>
                                                            <td><%= data.invoice %></td>
                                                            <td><%= data.date %></td>
                                                            <td><%= data.customer %></td>
                                                            <td><%= data.JD %></td>
                                                            <td>
                                                                <% if( data.accounting_account_confirm == "true" && data.wms_account_confirm == "true"){ %>
                                                                    <div class="alert alert-success text-center" role="alert">Approved</div>
                                                                <% }else { %>
                                                                    <div class="alert alert-dark text-center" role="alert">Pending</div>
                                                                <% } %>
                                                            </td>
                                                            <td><%= data.totalQTY %></td>
                                                            <td>
                                                                <a href="/sales_order/view_sales/<%= data._id %>">
                                                                    <button type="button" class="btn btn-success m-1">view </button>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    <%- include('./partials/footer'); -%>
    </div>
    <%- include('./partials/toastr'); -%>
    <%- include('./partials/script'); -%>
</body>

</html>