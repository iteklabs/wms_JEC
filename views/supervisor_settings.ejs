<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); -%>

</head>

<body>
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <%- include('./partials/header_logo'); -%>

            <!--**********************************
            Nav header end
        ***********************************-->

            <!--**********************************
            Header start
        ***********************************-->
            <%- include('./partials/header',{titel: language.master_settings}); -%>

                <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

                <!--**********************************
            Sidebar start
        ***********************************-->
                <%- include('./partials/sidebar'); -%>

                    <!--**********************************
            Sidebar end
        ***********************************-->

                    <!--**********************************
            Content body start
        ***********************************-->
                    <div class="content-body">
                        <div class="container-fluid">

                            <!-- row -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title"><%= language.master_settings %> </h4>
                                            <button type="button" class="btn btn-rounded btn-outline-info"
                                                onclick="history.back()"><i class="la la-undo"></i> <%= language.go_back %> </button>
                                        </div>

                                        <div class="card-body">
                                            <!-- <div class="form-validation"> -->

                                                <form class="needs-validation" action="/master_shop/view/supervisors" method="post" id="form">

                                                    <div class="row g-5 mb-4">

                                                        

                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="site_title" class="col-form-label">Raw Materials Supervisor Name </label>
                                                                <input type="text" class="form-control" id="rm_name" value="<%= supervisor_data.RMSName %>" name="rm_name" required>
                                                            </div>
                                                        </div>

                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="site_title" class="col-form-label">Finished Goods Supervisor Name </label>
                                                                <input type="text" class="form-control" id="fg_name" value="<%= supervisor_data.FGSName %>" name="fg_name" required>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <div class="row g-5 mb-1">

                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="rm_email" class="col-form-label">Email </label>
                                                                <input type="text" class="form-control" id="rm_email" name="rm_email" value="<%= supervisor_data.RMSEmail %>" required>
                                                            </div>
                                                        </div>

                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="fg_email" class="col-form-label">Email </label>
                                                                <input type="text" class="form-control" id="fg_email" name="fg_email" value="<%= supervisor_data.FGSEmail %>" required>
                                                            </div>
                                                        </div>
                                                        
                                                    </div>


                                                    <div class="row g-5 mb-1">

                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="rm_mobilenum" class="col-form-label">Mobile number </label>
                                                                <input type="text" class="form-control" id="rm_mobilenum" name="rm_mobilenum" value="<%= supervisor_data.RMSnumber %>" required>
                                                            </div>
                                                        </div>

                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="fg_number" class="col-form-label">Mobile number </label>
                                                                <input type="text" class="form-control" id="fg_number" name="fg_number" value="<%= supervisor_data.FGSnumber %>" required>
                                                            </div>
                                                        </div>
                                                        
                                                    </div>

                                                   
                                                    
                                                    <div class="row mt-4">
                                                        <button class="btn btn-primary" type="submit" id="submit"><%= language.submit %> </button>
                                                    </div>

                                                </form>
                                            <!-- </div> -->
                                        </div>
                                    </div>
                                </div>
                            </div>  
                        </div>
                    </div>
                    <!--**********************************
            Content body end
        ***********************************-->

                    <!--**********************************
            Footer start
        ***********************************-->
                    <%- include('./partials/footer'); -%>

                        <!--**********************************
            Footer end
        ***********************************-->

    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!-- start Toastr -->
    <%- include('./partials/toastr'); -%>
        <!-- End Toastr -->

        <!--**********************************
        Scripts
    ***********************************-->
        <%- include('./partials/script'); -%>

            <!--**********************************
        Scripts end
    ***********************************-->
</body>

</html>