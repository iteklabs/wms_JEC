<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); -%>

</head>

<body>
    <!--*******************
    Preloader start
********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
    Preloader end
********************-->

    <!--**********************************
    Main wrapper start
***********************************-->
    <div id="main-wrapper">

        <!--**********************************
        Nav header start
    ***********************************-->
        <%- include('./partials/header_logo'); -%>

            <!--**********************************
        Nav header end
    ***********************************-->

            <!--**********************************
        Header start
    ***********************************-->
            <%- include('./partials/header',{titel: language.expense_types}); -%>

                <!--**********************************
        Header end ti-comment-alt
    ***********************************-->

                <!--**********************************
        Sidebar start
    ***********************************-->
                <%- include('./partials/sidebar'); -%>

                    <!--**********************************
        Sidebar end
    ***********************************-->

                    <div class="content-body">
                        <div class="container-fluid">
                            <!-- row -->

                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title col-6"><%= language.expense_types %> </h4>
                                            <div class="card-title col-6 text-end">

                                                <button type="button" class="btn btn-rounded btn-info"
                                                    data-toggle="modal" data-target="#exampleModal">
                                                    <%= language.add_expense_types %> 
                                                    <span class="btn-icon-start text-info"><i
                                                            class="fa fa-plus color-info"></i>
                                                    </span>
                                                </button>
                                            </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-responsive-sm text-center">
                                                <thead>
                                                    <tr>
                                                        <th><%= language.no %> </th>
                                                        <th><%= language.name %> </th>
                                                        <th><%= language.edit %> </th>
                                                        <th><%= language.delete %> </th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <% var i=1 %>
                                                        <% expensesData.forEach(expenseType => { %>
                                                    <tr>
                                                        <td>
                                                            <%= i %>
                                                        </td>
                                                        <td>
                                                            <%= expenseType.name %>
                                                        </td>
                                                        <td>
                                                            <a type="button" class="btn btn-sm btn-primary cuModalBtn" data-toggle="modal" id="expenses_type" data-target="#EditModal" data-name="<%= expenseType.name %>"
                                                                data-id="<%= expenseType._id %>">
                                                                <%= language.edit %> 
                                                            </a>
                                                        </td>
                                                        
                                                       <%  if (expenseType.count != 0) { %>
                                                       
                                                            <td>
                                                                <a type="button" class="btn btn-sm light btn-danger cuModalBtn" id="procatid">
                                                                    <%= language.delete %> 
                                                                </a>
                                                            </td>

                                                        <% } else { %>

                                                            <td>
                                                                <a type="button" class="btn btn-sm btn-danger cuModalBtn" href="/all_expenses/type/delete/<%= expenseType._id %>" id="procatid">
                                                                    <%= language.delete %> 
                                                                </a>
                                                            </td>
                                                        <% } %>
                                                    </tr>
                                                    <% i++ %>
                                                    <% }) %>
                                                </tbody>
                                            </table>
                                            
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->

                    <form action="/all_expenses/type" method="post">
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-primary ">
                                        <h5 class="modal-title text-white" id="exampleModalLabel">
                                            <%= language.add_new_expense %> 
                                        </h5>
                                    </div>

                                    <div class="modal-body">

                                        <div class="form-group">
                                            <label for="recipient-name" class="col-form-label"><%= language.name %> <span class="text-red">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="recipient-name"
                                                placeholder="Expense Name" name="name" required>

                                        </div>
                                        <button type="submit" class="btn btn-primary w-100"><%= language.submit %> </button>

                                    </div>

                                    <div class="modal-footer">
                                        <div class="d-flex">
                                            <button type="button" class="btn btn-danger"
                                                data-dismiss="modal"><%= language.close %> </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- modal end -->

                    <!-- Edit Modal -->

                    <form id="edit_form" action="/all_expenses/type/" method="post">
                        <div class="modal fade" id="EditModal" tabindex="-1" role="dialog"
                            aria-labelledby="EditModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-primary ">
                                        <h5 class="modal-title text-white" id="EditModalLabel">
                                            <%= language.edit_expenses_details %> 
                                        </h5>

                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">

                                            <label for="recipient-name" class="col-form-label"><%= language.name %>  
                                                <span class="text-red">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="edit-name" value="" name="name" required>
 
                                        </div>

                                        <button type="submit" class="btn btn-primary w-100"><%= language.submit %> </button>
                                    </div>

                                    <div class="modal-footer">
                                        <div class="d-flex">
                                            <button type="button" class="btn btn-danger"
                                                data-dismiss="modal"><%= language.close %> </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    

                    <!-- Edit modal end -->

                    <!--**********************************
            Footer start
        ***********************************-->
                    <%- include('./partials/footer'); -%>

                        <!--**********************************
            Footer end
        ***********************************-->

    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!-- start Toastr -->
    <%- include('./partials/toastr'); -%>
    <!-- End Toastr -->

    <!--**********************************
        Scripts
    ***********************************-->
 
    <%- include('./partials/script'); -%>

        <!--**********************************
        Scripts end
    ***********************************-->
</body>

</html>