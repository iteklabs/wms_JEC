            if (!isNaN(adjustQty) && !isNaN(stock)) {
                var result;

                if (selectedOption === "add") {
                result = stock + adjustQty;
                } else if (selectedOption === "minus") {
                result = stock - adjustQty;
                }

                if (!isNaN(result)) {
                newAdjustQtyInput.value = result;
                } else {
                newAdjustQtyInput.value = "";
                }
            } else {
                newAdjustQtyInput.value = "";
            }
        }

