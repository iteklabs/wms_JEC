<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); -%>

</head>

<body>
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <%- include('./partials/header_logo'); -%>

            <!--**********************************
            Nav header end
        ***********************************-->

            <!--**********************************
            Header start
        ***********************************-->
            <%- include('./partials/header',{titel: language.sales_return}); -%>

                <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

                <!--**********************************
            Sidebar start
        ***********************************-->
                <%- include('./partials/sidebar'); -%>

                    <!--**********************************
            Sidebar end
        ***********************************-->

                    <!--**********************************
            Content body start
        ***********************************-->
                    <div class="content-body">
                        <div class="container-fluid">

                            <!-- row -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        
                                        <div class="card-header" id="invo_print">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="text-center m-2">
                                                        <h3><%= language.sales_return_invoice %> </h3>
                                                    </div>
                                                </div>
                                                    
                                                <hr class="my-3">
            
                                                <div class="col-8 px-5">
                                                    <h4><%= language.bill_to %> </h4>
                                                    <h5><%= language.name %>  : <%= customers.name %></h5>
                                                    <h5><%= language.mobile %>  : <%= customers.mobile %></h5>
                                                    <h5><%= language.email %>  : <%= customers.email %> </h5>
                                                    <h5><%= language.address %>  : <%= customers.address %> </h5>
                                                </div>

                                                <div class="col-4">
                                                    <h4><%= language.bill_from %> </h4>
                                                    <h5><%= language.invoice %>  : <%= sales.invoice %></h5>
                                                    <h5><%= language.date %>  : <%= sales.date %> </h5>
                                                    <h5><%= language.warehouse %>  : <%= sales.warehouse_name %> </h5>
                                                </div>
                    
                                                <hr class="mb-3">
                    
                                                <% if(master_shop[0].currency_placement == 1) { %>

                                                    <div class="col-12">
                                                        <div class="table-responsive m-3">
                                                            <table id="default-datatable" class="display table">
                                                                <thead class="table_head">
                                                                    <tr>
                                                                        <th><%= language.no %> </th>
                                                                        <th><%= language.name %> </th>
                                                                        <th><%= language.quantity %> </th>
                                                                        <th><%= language.unit_price %> </th>
                                                                        <th><%= language.total %> </th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody id="invoice_item" class="align-items-center">
                                                                    <% var i=1 %>   
                                                                    <% sales.return_sale.forEach((sales)=> { %>
                                                                        <tr>
                                                                            <td class="text-black"><%= i %></td>
                                                                            <td class="text-black"><%= sales.product_name %></td>
                                                                            <td class="text-black"><%= sales.return_qty %></td>
                                                                            <td class="text-black"><%= sales.price.toLocaleString() %> <%= master_shop[0].currency %></td>
                                                                            <td class="text-black"><%= sales.total.toLocaleString() %> <%= master_shop[0].currency %></td>
                                                                        </tr>
                                                                    <% i++ %>
                                                                    <% }) %>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
    
                                                    <div class="col-8">
                                                        <h4><%= language.note %> :&nbsp; <%= sales.note %></h4>
                                                    </div>
    
                                                    <div class="col-4 mb-4">
                                                        <h4><%= language.subtotal %>  :&nbsp; <%= sales.total_amount.toLocaleString() %> <%= master_shop[0].currency %></h4>
                                                        <h4><%= language.discount %>  :&nbsp; <%= sales.discount.toLocaleString() %> <%= master_shop[0].currency %></h4>
                                                        <h4><%= language.payable %>  :&nbsp; <%= sales.payable_to_customer.toLocaleString() %> <%= master_shop[0].currency %></h4>
                                                        <h4><%= language.paid_amount %>  :&nbsp; <%= sales.paid_amount.toLocaleString() %> <%= master_shop[0].currency %></h4>
                                                        <h4><%= language.due_amount %>  :&nbsp; <%= sales.due_amount.toLocaleString() %> <%= master_shop[0].currency %></h4>
                                                    </div>

                                                <% } else { %>
                                                        
                                                    <div class="col-12">
                                                            <div class="table-responsive m-3">
                                                                <table id="default-datatable" class="display table">
                                                                    <thead class="table_head">
                                                                        <tr>
                                                                            <th><%= language.no %> </th>
                                                                            <th><%= language.name %> </th>
                                                                            <th><%= language.quantity %> </th>
                                                                            <th><%= language.unit_price %> </th>
                                                                            <th><%= language.total %> </th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody id="invoice_item" class="align-items-center">
                                                                        <% var i=1 %>   
                                                                        <% sales.return_sale.forEach((sales)=> { %>
                                                                            <tr>
                                                                                <td class="text-black"><%= i %></td>
                                                                                <td class="text-black"><%= sales.product_name %></td>
                                                                                <td class="text-black"><%= sales.return_qty %></td>
                                                                                <td class="text-black"><%= master_shop[0].currency %> <%= sales.price.toLocaleString() %></td>
                                                                                <td class="text-black"><%= master_shop[0].currency %> <%= sales.total.toLocaleString() %></td>
                                                                            </tr>
                                                                        <% i++ %>
                                                                        <% }) %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                    </div>
    
                                                    <div class="col-8">
                                                        <h4><%= language.note %> :&nbsp; <%= sales.note %></h4>
                                                    </div>
    
                                                    <div class="col-4 mb-4">
                                                        <h4><%= language.subtotal %>  :&nbsp; <%= master_shop[0].currency %> <%= sales.total_amount.toLocaleString() %></h4>
                                                        <h4><%= language.discount %>  :&nbsp; <%= master_shop[0].currency %> <%= sales.discount.toLocaleString() %></h4>
                                                        <h4><%= language.payable %>  :&nbsp; <%= master_shop[0].currency %> <%= sales.payable_to_customer.toLocaleString() %> </h4>
                                                        <h4><%= language.paid_amount %> :&nbsp; <%= master_shop[0].currency %> <%= sales.paid_amount.toLocaleString() %> </h4>
                                                        <h4><%= language.due_amount %> :&nbsp; <%= master_shop[0].currency %> <%= sales.due_amount.toLocaleString() %> </h4>
                                                    </div>

                                                <% } %>

                                                <hr>
                    
                                                <div class="d-flex justify-content-center mt-4">
                                                    ************* <%= language.thank_you %> *************
                                                </div>
                                            
                                            </div>
                                        </div>

                                        <div class="card-body text-end">
                                            <button type="button" class="btn btn-warning mb-1 w-25" id="purchases_invo"><%= language.print_invoice %> </button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!--**********************************
            Content body end
        ***********************************-->

                    <!--**********************************
            Footer start
        ***********************************-->
                    <%- include('./partials/footer'); -%>

                        <!--**********************************
            Footer end
        ***********************************-->

    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!-- start Toastr -->
    <%- include('./partials/toastr'); -%>
        <!-- End Toastr -->

        <!--**********************************
        Scripts
    ***********************************-->

        <%- include('./partials/script'); -%>

            <!--**********************************
        Scripts end
    ***********************************-->
</body>

</html>